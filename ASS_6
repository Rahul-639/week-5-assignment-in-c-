#include <bits/stdc++.h>
using namespace std;
class Solution {
public:
    vector<int> calculateSpan(vector<int>& arr) {
        int n = arr.size();
        vector<int> span(n);
        stack<int> st;
        for (int i = 0; i < n; i++) {
            while (!st.empty() && arr[st.top()] <= arr[i]) {
                st.pop();
            }
            span[i] = st.empty() ? (i + 1) : (i - st.top());
            st.push(i);
        }

        return span;
    }
};
int main() {
    Solution sol;
    vector<int> arr1 = {100, 80, 60, 70, 60, 75, 85};
    vector<int> ans1 = sol.calculateSpan(arr1);
    for (int x : ans1) cout << x << " ";
    cout << endl;
    vector<int> arr2 = {10, 4, 5, 90, 120, 80};
    vector<int> ans2 = sol.calculateSpan(arr2);
    for (int x : ans2) cout << x << " ";
    cout << endl;
    return 0;
}
