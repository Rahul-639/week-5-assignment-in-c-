#include <bits/stdc++.h>
using namespace std;
class Solution {
public:
    int celebrity(vector<vector<int>>& mat) {
        int n = mat.size();
        int a = 0, b = n - 1
        while (a < b) {
            if (mat[a][b] == 1) {
                a++;
            } else {
    
                b--;
            }
        }

        int candidate = a;
        for (int i = 0; i < n; i++) {
            if (i != candidate) {
                if (mat[candidate][i] == 1) return -1;
              
            }
        }

        return candidate;
    }
};
int main() {
    Solution sol;
    vector<vector<int>> mat1 = {{1,1,0},{0,1,0},{0,1,1}};
    cout << sol.celebrity(mat1) << endl; 
    vector<vector<int>> mat2 = {{1,1},{1,1}};
    cout << sol.celebrity(mat2) << endl;
    vector<vector<int>> mat3 = {{1}};
    cout << sol.celebrity(mat3) << endl; 
    return 0;
}
