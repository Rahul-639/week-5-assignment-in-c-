#include <bits/stdc++.h>
using namespace std;
class Solution {
public:
    int countMinReversals(string s) {
        int n = s.length();
        if (n % 2 != 0) return -1;
        stack<char> st;
        for (char c : s) {
            if (c == '{') {
                st.push(c);
            } else {
                if (!st.empty() && st.top() == '{') {
                    st.pop(); 
                } else {
                    st.push(c);
                }
            }
        }
        int open = 0, close = 0;
        while (!st.empty()) {
            if (st.top() == '{') open++;
            else close++;
            st.pop();
        }
        return (open + 1) / 2 + (close + 1) / 2;
    }
};
int main() {
    Solution sol;
    string s1 = "}{{}}{{{";
    cout << sol.countMinReversals(s1) << endl; 
    string s2 = "{{}{{{}{{}}{{";
    cout << sol.countMinReversals(s2) << endl; 
    return 0;
}
